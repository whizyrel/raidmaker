{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "lib": ["es2015"],
        "removeComments": true,
        "pretty": false,
        "declaration": true,
        "strict": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": ["webpack.config.js"]
}